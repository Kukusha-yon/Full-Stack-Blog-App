<h1>Authorized personal only</h1>
<div class="container-xxl">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) { %> 
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert" >
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label ="close"></button>
                    <strong ><%= message.message %></strong>
                </div>
             <% } %>
             <div class="table-responsive">
                <% if(users != '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((show,index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><img src="<%= show.Image %>" width="50" class="img-thumbnail" /></td>
                                    <td><%= show.name %></td>
                                    <td><%= show.email %></td>
                                    <td><%= show.phone %></td>
                                    <td>
                                        <a href="/edit/<%= show._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= show._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                <% } %>
             </div>
        </div>
    </div>
</div>